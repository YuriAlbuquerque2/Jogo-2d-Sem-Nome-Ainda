function scr_textos(){
	switch (npc_nome) {
		case "Aldeão 1":
			texto[0] = "";
			texto[1] = "Sr. Guileon! Ainda bem que você apareceu!";
			texto[2] = "Aquele monstro estava prestes a chegar na minha casa para colocar fogo também, que terrível!";
			texto[3] = "Muito obrigado por evitar que isso acontecesse, você é um herói!";
			texto[4] = "Só vou ser um herói quando trazer a princesa de volta...";
			texto[5] = "A-a princesa foi raptada?? Oh céus, você precisa ir atrás dela, acho que por aqui está seguro.";
			texto[6] = "Obrigado novamente, e boa sorte!";
		break;
		
		case "Troll":
			texto[0] = "Ei, você, o que pensa que está fazendo? Cadê a princesa?";
			texto[1] = "Hahahahahahaha, princesa? Ela já está longe daqui, sendo levada por Asterion para descobrir o segredo!";
			texto[2] = "Segredo? Que segredo? E quem é Asterion?";
			texto[3] = "Nada disso te interessa, o que te interessa é o meu porrete que vai entrar dentro da sua cara! Hahahahahahaha!";
	}
}